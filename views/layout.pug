html
    head
        title SOF
        link(rel="stylesheet", href="/css/styles.css")
    body
        block header
            header
                h1
                    a(href="/") StackOverFlow
        main
            block main
        block footer
            footer
                nav
                    ul
                        if loggedInUser
                            li
                                a(href="/new") New post
                            li
                                a(href="/userProfile/" + loggedInUser.id) Profile
                            li
                                a(href="/logout") Log out
                        else
                          
                            li
                                a(href="/signin") Sign in
                            li
                                a(href="/signup") Sign up
